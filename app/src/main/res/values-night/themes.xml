<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HeroJourney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette_flax</item>
        <item name="colorPrimaryVariant">@color/flax_alt</item>
        <item name="colorOnPrimary">@color/raisin_black_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/raisin_black_3</item>
        <item name="colorSecondaryVariant">@color/outer_space</item>
        <item name="colorOnSecondary">@color/palette_flax</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="buttonTint">@color/flax_alt</item>

        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="android:fontFamily">@font/barlow_medium</item>
    </style>
</resources>