<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- Sombra negra con opacidad -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Fondo principal con borde -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#fffaf0"/> <!-- Color claro tipo pergamino -->
            <stroke android:width="2dp" android:color="#8b5e3c"/> <!-- Borde marrÃ³n -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>