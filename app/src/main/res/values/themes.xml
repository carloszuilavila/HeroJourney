<resources>
    <!-- Base application theme. -->
    <style name="Theme.HeroJourney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette_warm_sunset_alt</item>
        <item name="colorPrimaryVariant">@color/palette_warm_sunset</item>
        <item name="colorOnPrimary">@color/Ivory</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ivory_alt</item>
        <item name="colorSecondaryVariant">@color/Ivory</item>
        <item name="colorOnSecondary">@color/outer_space_alt</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="buttonTint">@color/palette_warm_sunset_alt</item>

        <item name="android:windowBackground">@color/windowBackground</item>


        <item name="android:fontFamily">@font/barlow_medium</item>

    </style>
    <style name="Theme.HeroJourney.Splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>